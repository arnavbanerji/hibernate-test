<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- dialect specifies the type of database used in hibernate so that hibernate generate appropriate type of SQL statements-->
        <property name = "hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name = "hibernate.connection.url">jdbc:mysql://localhost:3307/neon</property>
        <property name = "hibernate.connection.username">root</property>
        <property name = "hibernate.connection.password">root</property>
        <!--
        <property name="hbm2ddl.auto">create</property>  it will auto create tables in database as per POJO classes
                                                                everytime transaction would happen
                                                                it will also drop existing table and create another new table
        -->
        <property name="hbm2ddl.auto">update</property> <!-- it will auto update tables in database everytime tx happens-->
        <property name="show_sql">true</property> <!-- it will show the SQL query generated by hibernate in the debug window-->
    </session-factory>
</hibernate-configuration>